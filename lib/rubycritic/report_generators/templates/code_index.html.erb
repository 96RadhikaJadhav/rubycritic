<table id="js-code-table" class="analysis-index-table sortable-table">
<thead>
  <tr>
    <th class="first-cell">Name</th>
    <th title="Number of times a file has changed">Churn</th>
    <th title="Overall amount of code in a file">Complexity</th>
    <th>Smells</th>
  </tr>
</thead>
<tbody>
  <% @analysed_files.each do |analysed_file| %>
    <tr>
      <td class="first-cell">
        <a href="<%= file_path(analysed_file.pathname) %>"><%= analysed_file.name %></a>
      </td>
      <td><%= analysed_file.churn %></td>
      <td><%= analysed_file.complexity %></td>
      <td><%= analysed_file.smells.length %></td>
    </tr>
  <% end %>
</tbody>
</table>
